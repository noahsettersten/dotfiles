# Load scripting addition
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# Configure general settings (paddings and gap default to 0)
yabai -m config layout              bsp \
                top_padding         12 \
                bottom_padding      7 \
                left_padding        10 \
                right_padding       10 \
                window_gap          7

yabai -m config window_opacity on \
                active_window_opacity 1.0 \
                normal_window_opacity 0.5

# Ignore certain apps
yabai -m rule --add app="^zoom.us$" manage=off
yabai -m rule --add app="^Clean Shot" manage=off
# "^System Settings$", "^Slack$", "^1Password$", "^KeePassXC$", "^qemu-system-aarch64"

yabai -m config focus_follows_mouse autoraise

# Key shortcuts: Configured in ./skhdrc

# Start up FelixKratz's JankyBorders
borders active_color=0xffe1e3e4 inactive_color=0xff494d64 width=5.0 &
